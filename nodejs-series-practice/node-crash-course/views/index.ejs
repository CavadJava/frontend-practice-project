<!DOCTYPE html>
<html>
    <%- include('./partials/head.ejs') %>
<body>
    <% const name='mario' %>
    <h1>Home | <%=name %> </h1>
    <%- include('./partials/nav.ejs') %>

    <div class="blogs content">
        <h2>All Blogs</h2>
        <% if (blogs.length>0) { %>
            <% blogs.forEach(blog => { %>
                <h3 class="title"> <%= blog.title %> </h3>
                <p class="snippet"> <%= blog.snippet %> </p>
            <% }) %>
        <% } else {%>
            There are no blogs in display
        <% } %>
    </div>
    <%- include('./partials/footer.ejs') %>

</body>
</html>